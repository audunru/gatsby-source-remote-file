{
  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
